  <script>
    window.onload = function() {
        let message = new URLSearchParams(window.location.search).get('message');
        if(message){
          alert(message);
        }
    };
    </script>   
  
    <%- include('common/header'); -%>
    <div class="container">
      <h2 class="h3cuisine">Cuisines</h2>
          <section class="recipeflex">
            <div class="recipewrapper">
            <% if(categories != '') { %>
              <% categories.forEach(function(category, index){ %>
          <a href="/categories/<%- category.name %>" class="cuisine">
            <img src="img/<%- category.image %>" alt="<%- category.name %>">
            <p class="recipepara"><%- category.name %></p>
          </a>
          <% }) %>
          <% } %>
        </div>
          </section>
          <div class="more">
            <a href="categories" class="cuisine">
              <button class="btn1">View More</button>
            </a>
          </div>
          <hr class="split">
          <h2 class="h3recipes">Recipes</h2>
          <section class="recipeflex">
            <div class="recipewrapper">

            <% if(food != '') { %>
              <% food.latest.forEach(function(recipe, index){ %>
          <a href="/recipe/<%= recipe._id %>" class="cuisine">
            <img src="uploads/<%= recipe.image %>" alt="<%= recipe.name %>">
            <p class="recipepara"><%= recipe.name %></p>
          </a>
          <% }) %>
          <% } else { %>
            <p>No Recipes</p>
            <% } %>
        </div>
          </section>
          <div class="more">
            <a href="categories" class="cuisine">
              <button class="btn1">View More</button>
            </a>
          </div>
      </div>
    
      <script>
        document.addEventListener("DOMContentLoaded", function(){
           function getCookie(name) {
              var value = "; " + document.cookie;
              var parts = value.split("; " + name + "=");
              if (parts.length == 2) return parts.pop().split(";").shift();
           }
           const navbar = document.getElementsByClassName("navright")[0];
           const menu = document.getElementsByClassName("menu")[0];
           const token = getCookie('token');
           if (token) {
               navbar.style.display = "none";
               menu.style.display = "block";
           } else {
               navbar.style.display = "inline-block";
               menu.style.display = "none";
           }
        });
        </script>
</body>
</html>